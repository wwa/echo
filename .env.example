# ===========================
# üîë API KEYS
# ===========================

# OpenAI API key (required for GPT, Whisper, and vision)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
# or: responses
OPENAI_LLM_BACKEND=completions

# Which profile to use at startup: legacy/current
OPENAI_MODEL_PROFILE=current

# Explicit profile-specific overrides (optional)
OPENAI_CHAT_MODEL_CURRENT=gpt-5-mini
OPENAI_VISION_MODEL_CURRENT=gpt-5.0
OPENAI_RESEARCH_MODEL_CURRENT=gpt-5.1
OPENAI_STT_MODEL_CURRENT=gpt-4o-mini-transcribe

OPENAI_CHAT_MODEL_LEGACY=gpt-4-turbo-preview
OPENAI_VISION_MODEL_LEGACY=gpt-4-vision-preview
OPENAI_RESEARCH_MODEL_LEGACY=gpt-4-turbo-preview
OPENAI_STT_MODEL_LEGACY=whisper-1
W
# SerpAPI key (required for web search)
SERPAPI_API_KEY=your_serpapi_api_key_here

#Shodan API: used by shodan.Shodan() (required for webSearch)
SHODAN_API_KEY=your_shodan_api_key_here

#NVD (USA GOV)
NVD_API_KEY=your_nvd_api_key_here

# ===========================
# üó£Ô∏è AUDIO SETTINGS
# ===========================

# Enable speech-to-text (microphone input)
# Set to "true" to use speech_recognition with PyAudio, or "false" to disable microphone input.
ENABLE_LISTEN=false

# Enable text-to-speech (audio output)
# Set to "true" to allow pyttsx3 or playsound3 to speak responses aloud.
ENABLE_SPEAK=false

# Enable clipboard (Read/Write)
ENABLE_CLIPBOARD=true

# ===========================
#  LOG SETTINGS
# ===========================

LOG_LEVEL=DEBUG

# ===========================
#  LLM SETTINGS
# ===========================

# Warning Threshold
CONTEXT_WARN_THRESHOLD=0.75

# ===========================
#  Core SETTINGS
# ===========================

SHOW_EXTRA_WINDOWS=false

# ===========================
#  WEBSOCKET LOG STREAM
# ===========================
# Enable/disable WebSocket log streaming
WEBSOCKET_LOG_ENABLED=false

# Where to bind the WebSocket server
WEBSOCKET_LOG_HOST=127.0.0.1
WEBSOCKET_LOG_PORT=9876